<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvertActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24pt"
        android:text="Invertebrates"/>
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24pt"
        android:text="World"/>
    <GridLayout
        android:id="@+id/invertGrid"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/insectsPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transitionName="fade_trans"
                    android:src="@drawable/insects"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/arachnidPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transitionName="fade_trans"
                    android:src="@drawable/arachnids"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/molluscPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transitionName="fade_trans"
                    android:src="@drawable/molluscs"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/crustaceanPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:transitionName="fade_trans"
                    android:src="@drawable/crustaceans"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>




    </GridLayout>
    <ImageButton
        android:id="@+id/mediaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:background="@null"
        android:src="@drawable/icon_prev"/>
    <ImageButton
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:background="@null"
        android:src="@drawable/finish_icon"/>



</LinearLayout>